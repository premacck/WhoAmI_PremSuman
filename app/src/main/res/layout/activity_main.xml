<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:fitsSystemWindows="true"
    tools:context="com.prembros.whoami.prem_suman.MainActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

    <include layout="@layout/content_main" />

    <com.github.clans.fab.FloatingActionMenu
        android:id="@+id/fab_menu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        fab:menu_fab_size="normal"
        fab:menu_showShadow="true"
        fab:menu_shadowColor="#66000000"
        fab:menu_shadowRadius="3dp"
        fab:menu_shadowYOffset="2dp"
        fab:menu_colorNormal="#DA4336"
        fab:menu_colorPressed="#E75043"
        fab:menu_colorRipple="#99FFFFFF"
        fab:menu_animationDelayPerItem="40"
        fab:menu_icon="@drawable/fab_add"
        fab:menu_buttonSpacing="0dp"
        fab:menu_labels_margin="0dp"
        fab:menu_labels_showAnimation="@anim/fab_scale_up"
        fab:menu_labels_hideAnimation="@anim/fab_slide_out_to_right"
        fab:menu_labels_padding="8dp"
        fab:menu_labels_cornerRadius="4dp"
        fab:menu_labels_colorNormal="#263238"
        fab:menu_labels_colorPressed="#424242"
        fab:menu_labels_colorRipple="#66FFFFFF"
        fab:menu_fab_show_animation="@anim/fab_slide_in_from_right"
        fab:menu_fab_hide_animation="@anim/fab_slide_out_to_right">

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/menu_item_1_call_me"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_phone"
            fab:fab_size="mini"
            fab:fab_label="Call me" />

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/menu_item_2_mail_me"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_email"
            fab:fab_size="mini"
            fab:fab_label="Mail me" />

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/menu_item_3_my_certifications"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_dashboard"
            fab:fab_size="mini"
            fab:fab_label="Certificates/Trainings" />

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/menu_item_4_academic_reports"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_school"
            fab:fab_size="mini"
            fab:fab_label="Academic Reports" />

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/menu_item_5_social_handles"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_group"
            fab:fab_size="mini"
            fab:fab_label="Social Handles" />

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/menu_item_6_cv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_description"
            fab:fab_size="mini"
            fab:fab_label="My CV" />

    </com.github.clans.fab.FloatingActionMenu>

    <io.codetail.widget.RevealFrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:id="@+id/main_activity_fragment_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </io.codetail.widget.RevealFrameLayout>

</android.support.design.widget.CoordinatorLayout>
